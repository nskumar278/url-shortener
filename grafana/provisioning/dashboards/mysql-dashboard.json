{
  "id": null,
  "title": "MySQL Metrics",
  "tags": ["mysql", "database"],
  "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "MySQL Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "mysql_up",
            "legendFormat": "MySQL Up"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Queries per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mysql_global_status_questions[5m])",
            "legendFormat": "Queries/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "InnoDB Buffer Pool Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "mysql_global_status_innodb_buffer_pool_pages_data * mysql_global_variables_innodb_page_size",
            "legendFormat": "Data Pages"
          },
          {
            "expr": "mysql_global_status_innodb_buffer_pool_pages_total * mysql_global_variables_innodb_page_size",
            "legendFormat": "Total Pages"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "yAxes": [
          {"label": "bytes", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 5,
        "title": "MySQL Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mysql_global_status_com_select[5m])",
            "legendFormat": "SELECT/sec"
          },
          {
            "expr": "rate(mysql_global_status_com_insert[5m])",
            "legendFormat": "INSERT/sec"
          },
          {
            "expr": "rate(mysql_global_status_com_update[5m])",
            "legendFormat": "UPDATE/sec"
          },
          {
            "expr": "rate(mysql_global_status_com_delete[5m])",
            "legendFormat": "DELETE/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 6,
        "title": "Slow Queries",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mysql_global_status_slow_queries[5m])",
            "legendFormat": "Slow Queries/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 7,
        "title": "MySQL Network Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mysql_global_status_bytes_received[5m])",
            "legendFormat": "Bytes Received/sec"
          },
          {
            "expr": "rate(mysql_global_status_bytes_sent[5m])",
            "legendFormat": "Bytes Sent/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "yAxes": [
          {"label": "bytes/sec", "min": 0},
          {"show": false}
        ]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
}
